<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ChecklistActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5">

        <!-- Logo -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="0.5">

            <!-- Logo Image -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="80dp"
                android:maxHeight="80dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/vancitycyclinglogo" />
        </TableRow>

        <!-- User Checklist Heading -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:id="@+id/activityHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="[User]'s Checklist"
                android:textSize="22dp"
                android:textColor="@android:color/black"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">


            <!--Recycler view for checklist created-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <!--            android:id="@+id/recyclerView"-->
            <!--            android:paddingTop="?attr/actionBarSize"-->
            <!--            android:layout_width="409dp"-->
            <!--            android:layout_height="729dp"-->
            <!--            app:layout_constraintBottom_toBottomOf="parent"-->
            <!--            app:layout_constraintEnd_toEndOf="parent"-->
            <!--            app:layout_constraintStart_toStartOf="parent"-->
            <!--            app:layout_constraintTop_toTopOf="parent"-->


        </TableRow>

        <!--Button to create another checklist-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addNewChecklistButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginBottom="28dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="@android:color/white"
            android:backgroundTint="#4D8FAC"
            app:borderWidth="0dp"
            app:srcCompat="@drawable/add"/>


        <!--        <TableRow-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:layout_weight="0.1">-->
        <!--            <Button-->
        <!--                android:id="@+id/addNewChecklistButton"-->
        <!--                android:layout_width="0dp"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_weight="1"-->
        <!--                android:text="+"-->
        <!--                android:textSize="22dp"-->
        <!--                android:textColor="@android:color/white"-->
        <!--                android:backgroundTint="#67BD24"/>-->
        <!--        </TableRow>-->

        <!-- Navigation -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4D8FAC">

            <!-- Map Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mapNavigation"
                style="@style/box_sky_blue"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_landscape"
                android:gravity="center_horizontal"
                android:text="Map"

                android:textColor="@android:color/white"
                android:textSize="10dp"
                app:backgroundTint="#4D8FAC" />

            <!-- Checklist Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/checklistNavigation"
                style="@style/box_sky_blue"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_checklist"
                android:gravity="center_horizontal"
                android:text="Checklist"
                android:drawableTint="#4D8FAC"
                android:textColor="#4D8FAC"
                android:textSize="10dp"
                app:backgroundTint="#ffff" />

            <!-- Resources Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resourcesNavigation"
                style="@style/box_sky_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_info"
                android:gravity="center_horizontal"
                android:text="Resources"

                android:textColor="@android:color/white"
                android:textSize="10dp"
                app:backgroundTint="#4D8FAC" />

            <!-- Account Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/accountNavigation"
                style="@style/box_sky_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_account"
                android:gravity="center_horizontal"
                android:text="Account"
                android:drawableTint="#ffff"
                android:textColor="#ffff"
                android:textSize="10dp"
                app:backgroundTint="#4D8FAC" />
        </TableRow>

    </TableLayout>
</LinearLayout>